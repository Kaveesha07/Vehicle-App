<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context=".VehicleInfo">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal">

        <TextView
            android:background="#FDFDFD"
            android:layout_width="match_parent"
            android:text="My Vehicles"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:layout_marginBottom="30dp"
            android:textSize="20sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow android:layout_margin="30dp">

        <TextView
            android:text="Vehicle Registration No:"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/VehicleNo"
            android:hint="WP CAG-0000"
            android:textColor="@color/Black" />

    </TableRow>

    <TableRow android:layout_margin="30dp">

        <TextView
            android:text="Vehicle Type"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sVehicleType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    </TableRow>

    <TableRow android:layout_margin="30dp">

        <TextView
            android:text="Vehicle Brand:"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/VehicleModel"
            android:hint="Toyota Premio"
            android:textColor="@color/Black" />
    </TableRow>

    <TableRow android:layout_margin="30dp">

        <TextView
            android:text="Fuel Type:"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/FuelType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    </TableRow>

    <TableRow android:layout_margin="30dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@color/Black"
            android:text="Previous"
            android:textColor="@color/AntiqueWhite" />

        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@color/Black"
            android:text="Add Vehicle"
            android:textColor="@color/AntiqueWhite" />
    </TableRow>


</TableLayout>