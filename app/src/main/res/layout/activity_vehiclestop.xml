<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal">

        <TextView
            android:background="#FDFDFD"
            android:text="How to Stop My Vehicle"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow>

        <ImageView
            android:id="@+id/imgStartProcess"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="70dp"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:maxHeight="150dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/start" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        >

        <TextView
            android:background="#FDFDFD"
            android:text="Step 01"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </TableRow>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/Black"
        android:orientation="vertical"
        android:textAlignment="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:outlineProvider="none"
            android:text="Plan where to stop.Then Observe and indicate."
            android:textAlignment="center"
            android:textColor="@color/AntiqueWhite"
            android:textIsSelectable="false"
            android:textSize="16sp" />
    </ScrollView>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal">

        <TextView
            android:background="#FDFDFD"
            android:text="Step 02"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </TableRow>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Black"
        android:orientation="vertical"
        android:textAlignment="viewStart"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:outlineProvider="none"
            android:text="Lose acceleration and Brake lightly."
            android:textAlignment="center"
            android:textColor="@color/AntiqueWhite"
            android:textIsSelectable="false"
            android:textSize="16sp" />
    </ScrollView>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal">

        <TextView
            android:background="#FDFDFD"
            android:text="Step 03"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </TableRow>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Black"
        android:orientation="vertical"
        android:textAlignment="viewStart"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:outlineProvider="none"
            android:text="Brake more firmly"
            android:textAlignment="center"
            android:textColor="@color/AntiqueWhite"
            android:textIsSelectable="false"
            android:textSize="16sp" />
    </ScrollView>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal">

        <TextView
            android:background="#FDFDFD"
            android:text="Step 04"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </TableRow>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Black"
        android:orientation="vertical"
        android:textAlignment="viewStart"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:outlineProvider="none"
            android:text="Press clutch down and then put on handbrake"
            android:textAlignment="center"
            android:textColor="@color/AntiqueWhite"
            android:textIsSelectable="false"
            android:textSize="16sp" />
    </ScrollView>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal">

        <TextView
            android:background="#FDFDFD"
            android:text="Step 05"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </TableRow>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Black"
        android:orientation="vertical"
        android:textAlignment="viewStart"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:outlineProvider="none"
            android:text="Turn off indicator and turn gear into neutral"
            android:textAlignment="center"
            android:textColor="@color/AntiqueWhite"
            android:textIsSelectable="false"
            android:textSize="16sp" />
    </ScrollView>
    <TableRow android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnbackHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/Black"
            android:text="Previous"
            android:textColor="@color/white" />
    </TableRow>

</TableLayout>